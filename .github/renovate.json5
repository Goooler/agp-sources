{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
  ],
  ignoreUnstable: false,
  packageRules: [
    {
      matchUpdateTypes: [
        'major',
      ],
      matchPackageNames: [
        '/.*/',
      ],
    },
    {
      allowedVersions: '/^[0-9]+\\.[0-9]+(\\.[0-9]+)?$/',
      automerge: true,
      automergeStrategy: 'rebase',
      matchPackageNames: [
        '/.*/',
      ],
    },
    {
      matchFileNames: [
        'gradle/stable.versions.toml',
      ],
      allowedVersions: '/^[0-9]+\\.[0-9]+(\\.[0-9]+)?$/',
      automerge: true,
      automergeStrategy: 'rebase',
    },
    {
      matchFileNames: [
        'gradle/alpha.versions.toml',
      ],
      allowedVersions: '/.*-alpha.*/',
      automerge: true,
      automergeStrategy: 'rebase',
    },
    {
      matchFileNames: [
        'gradle/beta.versions.toml',
      ],
      allowedVersions: '/.*-beta.*/',
      automerge: true,
      automergeStrategy: 'rebase',
    },
  ],
}
