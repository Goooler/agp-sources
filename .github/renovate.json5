{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
  ],
  ignoreUnstable: false,
  packageRules: [
    // Enable auto-merge for minor/patch updates.
    {
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      matchCurrentVersion: '!/^0/',
      automerge: true,
      automergeStrategy: 'rebase',
      matchPackageNames: [
        '/.*/',
      ],
    },
    {
      allowedVersions: '/^v?[0-9]+(\\.[0-9]+){0,2}$/',
      automerge: true,
      automergeStrategy: 'rebase',
      matchPackageNames: [
        '/.*/',
      ],
    },
    {
      matchFileNames: [
        'gradle/alpha.versions.toml',
      ],
      allowedVersions: '/.*-alpha.*/',
    },
    {
      matchFileNames: [
        'gradle/beta.versions.toml',
      ],
      allowedVersions: '/.*-beta.*/',
    },
    {
      matchFileNames: [
        'gradle/rc.versions.toml',
      ],
      allowedVersions: '/.*-rc.*/',
    },
    {
      matchFileNames: [
        'gradle/final.versions.toml',
      ],
      allowedVersions: '/^[0-9]+\\.[0-9]+(\\.[0-9]+)?$/',
    },
  ],
}
